[Unit]
Description=Main Quadify Service
After=network.target pigpiod.service

[Service]
Type=simple
User=__INSTALL_USER__
WorkingDirectory=/home/__INSTALL_USER__/Quadify
ExecStart=/usr/bin/python3 /home/__INSTALL_USER__/Quadify/src/main.py
ExecStop=/usr/bin/python3 /home/__INSTALL_USER__/Quadify/service/reset_oled_gpio.py
Restart=on-failure
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target

